<div
    class="tab-pane fade show"
    id="show-activity"
    role="tabpanel"
    aria-labelledby="home-tab"
>
    <!-- DataTales Example -->
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                    <form
                        method="POST"
                        action="/admin/items/add-activity"
                        enctype="multipart/form-data"
                    >
                        <div class="form-group">
                            <label for="name-edit">Name</label>
                            <input
                                type="text"
                                class="form-control"
                                id="name-activity"
                                aria-describedby="emailHelp"
                                placeholder="Enter Name"
                                name="name"
                                required
                            />
                        </div>
                        <div class="form-group">
                            <label for="name-edit">Type</label>
                            <input
                                type="text"
                                class="form-control"
                                id="type"
                                aria-describedby="emailHelp"
                                placeholder="Enter Type"
                                name="type"
                                required
                            />
                        </div>
                        <div class="form-group">
                            <label for="name-edit">Image</label>
                            <input
                                type="file"
                                class="form-control"
                                id="image-activity-add"
                                aria-describedby="emailHelp"
                                name="image"
                                required
                            />
                        </div>
                        <input type="hidden" name="itemId" value="<%= itemId %>">
                        <div class="form-group form-check"></div>
                        <button type="submit" class="btn btn-primary">
                            Save
                        </button>
                    </form>
                </div>
                <div class="col-md-7">
                    <div class="table-responsive">
                        <table
                            class="table table-bordered"
                            id="dataTableActivity"
                            width="100%"
                            cellspacing="0"
                        >
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Image URL</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% activity.forEach((element, index) => { %>
                                    <tr>
                                        <td><%= index+1 %></td>
                                        <td><%= element.name %></td>
                                        <td><%= element.type %></td>
                                        <td><img src="http://localhost:3000/<%= element.imageUrl %>" alt="imageURL" width="70px"></td>
                                        <td>
                                            <form
                                                action="/admin/items/<%= itemId %>/activity/<%= element.id %>/delete?_method=DELETE"
                                                method="POST"
                                            >
                                                <a
                                                    href="javascript:void();"
                                                    type="button"
                                                    class="btn btn-warning btn-circle btn-sm button-update"
                                                    data-id="<%= element.id %>"
                                                    data-name="<%= element.name %>"
                                                    data-type="<%= element.type %>"
                                                    ><i class="fas fa-edit"></i
                                                ></a>
                                                <button
                                                    type="submit"
                                                    class="btn btn-danger btn-circle btn-sm"
                                                >
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
